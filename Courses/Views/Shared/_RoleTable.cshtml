@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

<link href="~/Content/TableDisplayStyle.css" rel="stylesheet" />
<style>
    tr.clickable-row th:nth-child(-n+2) {
        cursor: pointer;
    }
</style>
<table class="table table-striped table-bordered table-list" id="table">
    <thead>
        <tr class="clickable-row">
            <th>
                Name <em class="fa fa-sort"></em>
            </th>
            <th>
                <em class="fa fa-cog"></em>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td align="center">
                    <a class="btn btn-default" href="/Role/EditRole?RoleName=@role.Name">
                    <em class="fa fa-pencil"></em></a>
                    <a data-ajax="true" data-ajax-mode="replace"
                       data-ajax-update="#table" href="/Role/DeleteRole?RoleName=@role.Name" data-ajax-confirm="Delete course @role.Name ?"
                       class="btn btn-danger"><em class="fa fa-trash"></em></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
<script src="https://use.fontawesome.com/6da3e92144.js"></script>
<script src="~/Scripts/SortTable.js"></script>