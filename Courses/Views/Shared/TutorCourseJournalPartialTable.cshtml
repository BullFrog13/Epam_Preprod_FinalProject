@model IEnumerable<Courses.Models.TutorModels.JournalWrapModel>
<link href="~/Content/TutorCourseJournalsStyle.css" rel="stylesheet" />
<table class="table table-striped table-bordered table-list" id="table">
    <thead>
        <tr>
            <th>
                Student name <em class="fa fa-sort"></em>
            </th>
            <th>
                Mark <em class="fa fa-sort"></em>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-toggle="modal" data-target="#myModal">
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @for (int i = 0; i <= 5; i++)
                    {
                        if (item.Mark == i)
                        {                       
                            <a disabled class="btn btn-success">@i</a>
                        }
                        else
                        {
                            <a class="btn btn-default" data-ajax="true" data-ajax-mode="update"
                                data-ajax-update="#table" data-ajax-loading="#@item.Id" data-ajax-method="GET" 
                               href="/Tutor/EditMark/?journalId=@item.Id&mark=@i&courseId=@ViewBag.CourseId">@i</a>
                        }
                    }
                    <div id="@item.Id" style="display: none">Wait...</div>
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
<script src="https://use.fontawesome.com/6da3e92144.js"></script>
<script src="~/Scripts/SortTable.js"></script>

 