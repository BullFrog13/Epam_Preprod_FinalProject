@model Courses.Models.AdminModels.Specialization.СreateSpecializationViewModel

<link href="~/Content/FormStyle.css" rel="stylesheet" />
<style>
    body {
        background-image: url("../../Content/Images/pencils-1280558_1920.jpg");
    }

    textarea {
        resize: none;
    }
</style>
<div class="container">
    <div class="col-lg-offset-3 col-sm-offset-2" id="wrapDiv">
        <h1 id="title">Create Specialization</h1>
        <div id="logbox">
            <form id="signup" method="post" action="/Admin/CreateSpecialization">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input name="Name" placeholder="Enter specialization name" class="input pass" />
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <input name="Description" placeholder="Enter short description" class="input pass" />
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                <input type="submit" value="Create" class="inputButton" />
            </form>
        </div>
        <a class="btn btn-primary" href="/Home/Specializations" id="link">Back to specalizations</a>
    </div>
</div>
